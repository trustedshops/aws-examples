---
AWSTemplateFormatVersion: '2010-09-09'
Resources:
  archExampleApiGatewayToTopicApi:
    Type: AWS::ApiGateway::RestApi
    Properties:
      Name: archExampleApiGatewayToTopicApi
    DependsOn:
    - archExampleApiGatewayToTopicApiRole
    - archExampleApiGatewayToTopicTopic
    - archExampleApiGatewayToTopicApiRole
  Sns:
    Type: AWS::ApiGateway::Resource
    Properties:
      RestApiId:
        Ref: archExampleApiGatewayToTopicApi
      ParentId:
        Fn::GetAtt:
        - archExampleApiGatewayToTopicApi
        - RootResourceId
      PathPart: sns
  POST:
    Type: AWS::ApiGateway::Method
    Properties:
      RestApiId:
        Ref: archExampleApiGatewayToTopicApi
      ResourceId:
        Ref: Sns
      AuthorizationType: NONE
      HttpMethod: POST
      MethodResponses:
      - StatusCode: 200
      Integration:
        IntegrationResponses:
        - StatusCode: 200
        RequestParameters:
          integration.request.querystring.Message: method.request.body
          integration.request.querystring.TopicArn:
            Fn::Join:
            - ''
            - - "'"
              - Ref: archExampleApiGatewayToTopicTopic
              - "'"
        Uri:
          Fn::Join:
          - ''
          - - 'arn:aws:apigateway:'
            - Ref: AWS::Region
            - ":sns:action/Publish"
        Type: AWS
        IntegrationHttpMethod: POST
        Credentials:
          Fn::GetAtt:
          - archExampleApiGatewayToTopicApiRole
          - Arn
  archExampleApiGatewayToTopicApiRole:
    Type: AWS::IAM::Role
    Properties:
      Path: "/"
      AssumeRolePolicyDocument:
        Version: '2012-10-17'
        Statement:
        - Action: sts:AssumeRole
          Principal:
            Service: apigateway.amazonaws.com
          Effect: Allow
          Sid: ''
      Policies:
      - PolicyName: TestEventApiPolicy
        PolicyDocument:
          Version: '2012-10-17'
          Statement:
          - Action: sns:*
            Resource:
            - "*"
            Effect: Allow
  archExampleApiGatewayToTopicTopic:
    Type: AWS::SNS::Topic
    Properties:
      TopicName: archExampleApiGatewayToTopicTopic
      Subscription: []
Description: ''
Parameters: {}
